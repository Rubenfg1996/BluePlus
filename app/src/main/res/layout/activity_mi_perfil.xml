<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mi_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blue.ruben.blue.MiPerfil"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageButton
            android:layout_marginTop="56dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/userphoto"
            android:layout_weight="0.16"
            android:layout_width="135dp"
            android:layout_height="125dp" />

        <TextView
            android:layout_marginTop="50dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvUsuarioPerfil"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailPerfil"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreApePerfil"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEdadPerfil"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAniosCanertPerfil"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            />

    </LinearLayout>

</RelativeLayout>
